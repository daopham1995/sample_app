<% @user ||= current_user %>
<div class="stats">
  <%= link_to relationships_user_path @user,
    relationship: "following" do %>
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    following
  <% end %>
  <%= link_to relationships_user_path @user,
    relationship: "followers" do %>
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    followers
  <% end %>
</div>
